<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapeImageView">
        <attr name="shape" format="integer">
            <enum name="circle" value="1"/>
            <enum name="rounded" value="2"/>
        </attr>
        <attr name="decorations_direction" format="integer">
            <enum name="left_top" value="1"/>
            <enum name="left_bottom" value="2"/>
            <enum name="right_top" value="3"/>
            <enum name="right_bottom" value="4"/>
        </attr>

        <attr name="decorations_src" format="reference"/>
        <attr name="radius_x" format="dimension"/>
        <attr name="radius_y" format="dimension"/>
        <attr name="radius" format="dimension"/>
    </declare-styleable>
</resources>